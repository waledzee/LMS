  "test_scenarios": {
    "scenario_1_admin_workflow": [
      {
        "step": 1,
        "description": "Login as Admin",
        "request": "POST /api/auth/login with admin credentials"
      },
      {
        "step": 2,
        "description": "Create a new librarian",
        "request": "POST /api/users with librarian data"
      },
      {
        "step": 3,
        "description": "Verify user was created",
        "request": "GET /api/users to see all users"
      }
    ],
